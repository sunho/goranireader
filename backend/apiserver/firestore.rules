rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /userdata/{userId} {
      allow read, write: if request.auth.uid == userId;
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    match /users {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      match /{document=**} {
        allow read, update: if true; // TODO block update
        allow delete, create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      }
    }
    match /books {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      match /{document=**} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      }
    }
    match /classes {
      match /{document=**} {
        allow read: if true;
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
        allow delete, create: if false;
      }
    }
    match /clientCompute/{userId} {
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;

      match /{document=**} {
        allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      }
    }
  }
}