<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="model"
                type="kim.sunho.goranireader.fragments.home.HomeGuideTabViewModel"/>
    </data>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                android:visibility="@{model.isMission}"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_alignParentBottom="true">

                    <TextView
                            android:text="Mission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="@{model.message}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/textView6"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="@{model.message2}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/imageView"
                            app:imageUrl="@{model.img}"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:padding="4dp"/>

                    <TextView
                            android:text="@{model.title}"
                            android:layout_toRightOf="@id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/card2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_alignParentBottom="true">

                    <TextView
                            android:text="Profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVie" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="@{model.username}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVie2" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/textVie"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp" card_view:layout_constraintVertical_bias="0.24000001"/>
                    <TextView
                            android:text="If this is not your name, please ask your teacher."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVie3" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/textVie2"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/card3_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_alignParentBottom="true">

                    <TextView
                            android:text="Progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVi" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="@{model.message3}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVi2" android:paddingTop="5dp" android:paddingLeft="5dp"
                            card_view:layout_constraintTop_toBottomOf="@+id/textVi"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>