{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es2015", "dom", "es2017"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"]
  }